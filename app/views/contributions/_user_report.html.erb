<% if logged_in? %>
  <% div_name = "report#{subject.class.name}#{subject.id}" %>
  <% if UserReport.find_by_user_id_and_subject_type_and_subject_id(current_user.id, subject.class.name, subject.id) %>
    <small>
      [ reported ]
    </small>
  <% else %>
    <small id="<%= div_name -%>">
      [
      <%= link_to('report', "/users/#{current_user.id}/reports?subject_type=#{subject.class.name}&subject_id=#{subject.id}",
          :method => :post,
          :remote => true,
          :confirm => "Are you sure you want to report this?",
          :class => 'report-link') %>
      ]
    </small>
  <% end %>
<% end %>
