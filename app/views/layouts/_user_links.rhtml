<% if logged_in? -%>
    <%= render :partial => 'gadgets/user_monitor' %>
<% else -%>
    <li><%= link_to 'Log in', new_session_path(:return_to => request.request_uri) -%></li>
    <% unless Conf.registration_disabled %>
        <li><%= link_to 'Register', new_user_path -%></li>
    <% end %>
<% end %>
