<% if params[:user_id] %>
  <li><%= link_to 'Users', users_path -%></li>
  
  <li><b>&#187;</b></li>
  
  <li><%= link_to contributor_name(params[:user_id], "User"), user_path(params[:user_id]) -%></li>
  
  <li><b>&#187;</b></li>
<% end %>

<li><%= link_to 'Pictures', pictures_path -%></li>

<% if ["show", "new", "edit"].include? controller.action_name.to_s -%>
  <li><b>&#187;</b></li>
  
  <% case controller.action_name.to_s; when "show" %>
  	<li><%= link_to "#{@picture.id}", picture_path(@picture.owner, @picture) %></li>
  <% when "new" %>
    <li>Upload Picture</li>
  <% when "edit" %>
		<li><%= link_to "#{@picture.id}", picture_path(@picture.owner, @picture) %></li>
		<li><b>&#187;</b></li>
    <li>Edit</li>
  <% else %>
    <!-- no breadcrumb -->
  <% end %>
<% end %>
